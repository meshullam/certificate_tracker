# ==================================================================
# Certificate Tracker - Environment Variables Template
# ==================================================================
# INSTRUCTIONS:
# 1. Copy this file and rename it to .env
# 2. Replace all placeholder values with your actual values
# 3. NEVER commit the .env file to Git (it's in .gitignore)
# ==================================================================

# ==================================================================
# DJANGO SETTINGS
# ==================================================================

# Secret key for Django (CRITICAL - Generate a new one for production!)
# Generate new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production

# Debug mode (NEVER set to True in production!)
# Options: True, False
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Development: localhost,127.0.0.1
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================================================================
# DATABASE CONFIGURATION
# ==================================================================

# Database name
DB_NAME=certificate_db

# Database user
DB_USER=postgres

# Database password (CHANGE THIS to a strong password!)
# Use a strong password generator for production
DB_PASSWORD=your_strong_database_password_here

# Database host
# Development: localhost
# Production: Your database server IP or hostname
DB_HOST=localhost

# Database port (default PostgreSQL port)
DB_PORT=5432

# ==================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ==================================================================

# Email backend
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (uncomment and configure for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# DEFAULT_FROM_EMAIL=noreply@thepolytechnic.edu

# ==================================================================
# APPLICATION SETTINGS
# ==================================================================

# Site name
SITE_NAME=Certificate Tracker

# Site URL (no trailing slash)
# Development: http://localhost:8000
# Production: https://yourdomain.com
SITE_URL=http://localhost:8000

# ==================================================================
# SECURITY SETTINGS (Production Only)
# ==================================================================

# Uncomment these for production deployment

# Force HTTPS
# SECURE_SSL_REDIRECT=True

# Secure cookies
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# HSTS (HTTP Strict Transport Security)
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ==================================================================
# LOGGING (Optional)
# ==================================================================

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# ==================================================================
# NOTES
# ==================================================================
# 1. Generate a new SECRET_KEY for production:
#    python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
#
# 2. Use strong passwords (minimum 16 characters, mix of letters, numbers, symbols)
#
# 3. Never commit your actual .env file to Git
#
# 4. Each environment (dev, staging, prod) should have its own .env
#
# 5. Keep this .env.example file updated when adding new variables
# ==================================================================